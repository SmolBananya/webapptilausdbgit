@model IEnumerable<WebAppTilausDB.Models.Tuotteet>

@{
    ViewBag.Title = "Index2";
}

<br />
<div class="container-fluid">
    <h2>Tuotteet</h2>
    <h4>Tuotteita yhteensä @Model.Count()</h4>

    <div class="row">
        @foreach (var item in Model)
        {
        <div class="col-lg-3">
            <div class="card text-white bg-primary mb-3">
                <h3 class="card-header bg-dark">
                    @Html.DisplayFor(modelItem => item.Nimi)
                </h3>
                <div class="card-body">
                    <h5 class="card-title text-white">
                        @Html.DisplayFor(modelItem => item.Ahinta)
                    </h5>
                    <h6 class="card-subtitle">
                        @Html.DisplayFor(modelItem => item.TuoteID)
                    </h6>
                </div>
                <img style="height: 200px; width: 100%; display: block;" src="@Html.DisplayFor(modelItem => item.ImageLink)" alt="@Html.DisplayFor(modelItem => item.ImageLink)">
                <div class="card-footer text-white">
                    2 days ago
                </div>
            </div>
            <button type="button" class="btn btn-outline-secondary">
                @Html.ActionLink("Edit", "Edit", new { id = item.TuoteID })
            </button>
            <button type="button" class="btn btn-outline-secondary">
                @Html.ActionLink("Details", "Details", new { id = item.TuoteID })
            </button>            
            <button type="button" class="btn btn-outline-danger">
                @Html.ActionLink("Delete", "Delete", new { id = item.TuoteID })
            </button>
        </div>
        }
    </div>
</div>


